<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentUIDlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current UID:"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentUIDdisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:text="exampleUIDtextgoeshere"
            android:textAlignment="center" />

        <Button
            android:id="@+id/sendNFCbutton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Send using NFC"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please note the following: 1) NFC hosting is only currently available on Android variants of the app, and 2) this is the only developed functionality for the Android variant as of this version."
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>